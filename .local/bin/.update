#!/usr/bin/env sh
# vi: ft=sh

# Where is the DIR for dotfiles?
dotfiles="$HOME/.files"
config="$HOME/.config"
tpm="$config/tmux/plugins/tpm"

mkdir -p "$HOME/Desktop"
mkdir -p "$HOME/Documents"
mkdir -p "$HOME/Downloads"
mkdir -p "$HOME/Music"
mkdir -p "$HOME/OSs"
mkdir -p "$HOME/Pictures/Screenshots"
mkdir -p "$HOME/Projects"
mkdir -p "$HOME/Public"
mkdir -p "$HOME/Templates"
mkdir -p "$HOME/Videos"
mkdir -p "$HOME/.local/log"

mkdir -p "$config/hypr"
touch "$config/hypr/monitors.conf"
touch "$config/hypr/workspaces.conf"

[ -d "$dotfiles" ] || git clone https://github.com/mxaddict/dotfiles.git "$dotfiles"
pwd=$(pwd)
cd "$dotfiles" || exit
git stash
git pull --no-edit
git stash pop

[ -f "$HOME/.files/.deps.lock" ] || "$HOME/.files/.local/bin/.deps"

stow --adopt .
cd "$pwd" || exit

if command -v batcat >/dev/null; then
    alias bat batcat
fi
bat cache --build

tldr --update
curl -sL https://raw.githubusercontent.com/jorgebucaran/fisher/main/functions/fisher.fish | fish && fisher update
nvim --headless "+Lazy! install all" +TSUpdateSync +qa

[ -d "$tpm" ] || git clone https://github.com/tmux-plugins/tpm "$tpm"
cd "$tpm" || exit
git pull
"$tpm/bin/install_plugins"
"$tpm/bin/update_plugins" all
"$tpm/bin/clean_plugins"
cd "$pwd" || exit
